rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // files for hikes: users/{username}/hikes/{hikeId}/...
    match /users/{username}/hikes/{hikeId}/{allPaths=**} {

      // Writes: must be authenticated and request must include ownerUid matching auth.uid
      allow write: if request.auth != null
                   && request.resource != null
                   && request.resource.metadata.ownerUid == request.auth.uid;

      // Reads: allow if object metadata.public == "true" (public file) OR owner
      allow read: if (resource != null && resource.metadata.public == "true")
                  || (request.auth != null && resource.metadata.ownerUid == request.auth.uid);
    }

    // default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
